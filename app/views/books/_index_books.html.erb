<table class="table table-hover table-inverse">
				<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th cllsapn="3"></th>
				</tr>
				</thead>
				<tbody>
				<% books.each do|book| %>
					<tr>
						<td>
					<%= link_to user_path(book) do %>
					<%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'40x40' %>
					<% end %>
				    </td>
				    <td>
				<%= link_to book.title, book_path(book.id) %>
					</td>
					<td><%= book.body %></td>
					<td id="favorites_buttons_<%= book.id %>">
						<!-- index.html book=@book  favorite.html book=book -->
						<%= render "favorites/favorite", book:book %>
					</td>
					<td>コメント数：<%= book.post_comments.count %></td>
				</tr>
				<% end %>
				</tbody>
			</table>