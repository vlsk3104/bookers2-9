<div class="container">
	<% if @book.errors.any? %>
	<div class="alert alert-warning">
		<p class="error-coment">!!error!!</p>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li class="error-message"><%= message %></li>
			<% end %>
 			</ul>
	</div>
<% end %>
	<div class="row">
		<div class="col-lg-6 col-lg-offset-3">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>
			<div class="field row" style="margin-bottom: 10px;">
				<label>Title</label>
				<%= f.text_field :title, class: "col-lg-12" %>
			</div>
			<div class="field row" style="margin-bottom: 10px;">
				<label>Opinion</label>
				<%= f.text_area :body, class: "col-lg-12" %>
			</div>
			<div class="row">
				<%= f.submit "Update Book", class: "btn btn-primary col-lg-12" %>
			</div>
			<% end %>
			<%= link_to "Show",book_path(@book) %>
			| <%= link_to "Back",books_path %>
		</div>
	</div>
</div>