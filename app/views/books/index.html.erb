<div class="container">

	<% if @book.errors.any? %>
	<div class="alert alert-warning">
		<p class="error-coment">!!error!!</p>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li class="error-message"><%= message %></li>
			<% end %>
 			</ul>
	</div>
<% end %>

	<div class="row">
		<div class="col-xs-3">
		<%= render 'users/profile', user:current_user %>
		<%= render "new_book", book:@book %>
	</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<%= render "index_books", books:@books %>
		</div>
	</div>
</div>